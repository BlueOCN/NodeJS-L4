body#LoginForm 
    .container 
        .login-form 
            .main-div 
                .panel 
                    if info && info.message 
                        div.alert.alert-danger
                            = info.message 
                    h2 Cambio de contrase単a
                    p Ingrese su contrase単a
                form#Login(action='/resetPassword' method='post')
                    input#email(type='hidden' name='email' value=user.email)
                    .form-group 
                        label(for='pwd') Constrase単a:
                        input#pwd.form-controll(type='password' name='password' class=errors.password)
                        if errors.password 
                                small#passwordHelp.text-danger 
                                    = errors.password.message
                    .form-group 
                        label(for='confirm_pwd') Confirmar constrase単a:
                        input#pwd.form-controll(type='password' name='confirm_password' class=errors.password ? 'is-invalid' : '')
                        if errors.confirm_password 
                            small#confirm_passwordHelp.text-danger 
                                = errors.confirm_password.message
                    button.btn.btn-primary(type='submit') Login